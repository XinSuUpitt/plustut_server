	<form class="ui form segment" method="post" action="/admin/signin" style="width: 30%;margin: 0 auto;">
	  <div class="field">
	    <label>用户邮箱</label>
	    <input type="text" name="email" placeholder="用户邮箱">
	  </div>
	  <div class="field">
	    <label>密码</label>
	    <input type="password" name="password" placeholder="密码">
	  </div>
	  <button class="ui fluid primary button" type="submit">登录</button>
	</form>
<script>
$(function(){
  $('.ui.dropdown').dropdown()
  $('.ui.form')
  .form({
      	inline : true,
    	on   : 'blur',
    	fields: {
				email: {
	        identifier: 'email',
	        rules: [
	          {
	            type   : 'empty',
	            prompt : '请输入用户名！'
	          }
	        ]
	     	},
	     	password: {
	        identifier: 'password',
	        rules: [
	          {
	            type   : 'empty',
	            prompt : '请输入密码！'
	          }
	        ]
	     
	  }
    }
  })
;
})
</script>
